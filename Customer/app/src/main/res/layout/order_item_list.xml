<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/order_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="order_number"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <!--<TextView-->
            <!--android:id="@+id/cart_product_quantity"-->
            <!--android:layout_width="160dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="medicine_quantity"-->
            <!--android:textSize="14dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:textColor="#000000"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:textAlignment="textEnd"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:textStyle="bold"/>-->
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_number"
            android:id="@+id/medicine_list_view"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">

        </TableLayout>
        <!--<TextView-->
        <!--android:id="@+id/cart_product_quantity"-->
        <!--android:layout_width="160dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="medicine_quantity"-->
        <!--android:textSize="14dp"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:textAlignment="textEnd"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:textStyle="bold"/>-->
        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="order_date"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@id/medicine_list_view"
            android:layout_marginTop="10dp"/>
        <TextView
        android:id="@+id/order_time"
            android:layout_marginTop="10dp"
        android:layout_width="160dp"
            android:layout_below="@id/medicine_list_view"
        android:layout_height="wrap_content"
        android:text="order_time"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:layout_marginRight="5dp"
        android:textStyle="bold"/>
        <TextView
            android:id="@+id/order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="order_price"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@id/order_date"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="order_status"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@id/order_price"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>