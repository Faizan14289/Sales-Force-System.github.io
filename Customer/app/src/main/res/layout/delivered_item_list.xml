<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/delivered_saleMan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="customer_name"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"

            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/delivered_saleMan_phone"
            android:layout_marginTop="10dp"
            android:layout_width="160dp"

            android:layout_height="wrap_content"
            android:text="customer_phone"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>

        <!--<TextView-->
        <!--android:id="@+id/cart_product_quantity"-->
        <!--android:layout_width="160dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="medicine_quantity"-->
        <!--android:textSize="14dp"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:textAlignment="textEnd"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:textStyle="bold"/>-->
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/delivered_saleMan_name"
            android:id="@+id/delivered_medicine_list_view"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">

        </TableLayout>
        <!--<TextView-->
        <!--android:id="@+id/cart_product_quantity"-->
        <!--android:layout_width="160dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="medicine_quantity"-->
        <!--android:textSize="14dp"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:textColor="#000000"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:textAlignment="textEnd"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:textStyle="bold"/>-->
        <TextView
            android:id="@+id/delivered_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="order_date"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@id/delivered_medicine_list_view"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/delivered_order_time"
            android:layout_marginTop="10dp"
            android:layout_width="160dp"
            android:layout_below="@id/delivered_medicine_list_view"
            android:layout_height="wrap_content"
            android:text="order_time"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"
            android:textAlignment="textEnd"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/delivered_order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="order_price"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@id/delivered_order_date"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/delivered_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="order_status"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@id/delivered_order_price"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:layout_below="@id/delivered_order_status"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/btn_confirmed"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>